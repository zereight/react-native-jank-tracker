{
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": false,
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "example/__tests__/**/*"
  ],
  "exclude": [
    "e2e"
  ]
}
